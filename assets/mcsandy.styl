smooth()
    -webkit-transition: all .3s ease-in-out;
    -moz-transition: all .3s ease-in-out;
    -o-transition: all .3s ease-in-out;
    transition: all .3s ease-in-out; 
smooth-out()
    -webkit-transition: all .3s ease-out;
    -moz-transition: all .3s ease-out;
    -o-transition: all .3s ease-out;
    transition: all .3s ease-out; 

html, body, h1, h2, h3, h4, h5, h6, div, fieldset, form, input, header, footer, section, article, figure, iframe
    padding:0;
    margin: 0;

fieldset{
    border: none;
}
body, html{
    height: 100%;
    width: 100%;
}

body{
    display:flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
    height: 100%;
    width: 100%;
    color: #091927;  /*hsl(208, 61.4%, 09.4%)*/
}
h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4, 
h5, .h5, 
h6, .h6{
    color: #589bd7; /* rgb(88, 155, 215);*/
}
h1, .h1{
    font-size: 1.2em;
}
h1, .h2{
    font-size: 1.1em;
}
a, input, textarea, form,fieldset
    smooth()    
    &:hover, &:focus
        outline: none;
        smooth-out()    

button,input,select,textarea
    border:1px solid hsla(128, 38.2%, 61.8%, 1)
    outline: none;
    &:hover
        border:1px solid hsla(128,38.2%, 38.2%, 1)

button, input, select
    padding: .618em;
    margin: .618em;

button
    background: hsla(128, 38.2%, 61.8%, 1);
    &:hover, &:focus
        background:1px solid hsla(128,38.2%, 38.2%, 1);

textarea
    font-family: Courier, monospace;

.mpGlobal__header,.mpGlobal__footer
    flex-shrink: 1
    display:flex
    flex-direction:column
    justify-content:flex-start
    padding: .618em;
    width: 98.5%;
.mpGlobal__header
    align-items: stretch;
    smooth()  
    &__onlineStatus
        align-self: flex-end;
        padding: .618em;
        min-height: 0em;
        max-height: 9em;
    &__editor__wrapper
        display:flex;
        flex-direction: column;
        flex-grow:1;
        smooth() 
    &__hgroup
        display:flex;
        flex-shrink: 0;
        flex-direction: row;
        align-self:flex-start;
        align-items: baseline;
        justify-content: space-between;
        font-size: 1em;
        width: 100%;
        background: #ecf4fa
        border-bottom: .125em solid #091927;
        .editor__label
            border-top-left-radius: 0
            border-top-right-radius: 0
            border-bottom-left-radius: .5em
            border-bottom-right-radius: .5em
.editor
    display: flex;
    flex-basis: 10em;
    flex-direction: column;
    justify-content: space-between;
    flex-grow: 1;
    -webkit-transition: all .3s ease-in-out;
    -moz-transition: all .3s ease-in-out;
    -o-transition: all .3s ease-in-out;
    transition: all .3s ease-in-out;
    &__toggle
        visibility:hidden
        position: fixed
        left: -9999em
        &:checked
            ~ .mpGlobal__header__editor,
            ~ .mpGlobal__footer__editor,
            ~ .mpGlobal__footer__editor > .editor__fieldset
                flex-basis: 0;
                height: 0;
                overflow:hidden;  
    &__label
        flex-shrink: 0;
        align-self: flex-start;
        display:inline-block;
        padding: .25em;
        border: 1px solid #e1e1e1;
        border-top-left-radius: .25em;
        border-top-right-radius: .25em;
        margin:0;
    &__fieldset
        flex-shrink: 1;     
    &__control
        display:none;
    .editor__fieldsetWrap
        display:flex
        .fieldset
            flex-grow: 0;
            flex-shrink: 1;
            flex-basis: 0%;
            height: 2em;
            overflow:hidden;
            &__field
                width: 0%;

.fieldset
    display:flex;
    flex-direction: column;
    &__label
        color: #ccc;
        display: block;
        font-size: .8em;
        padding: .618em;
        border: 1px solid #ccc;  
    &__field
        height: 0;
        visibility: hidden;
        align-self: flex-end;
        flex-basis: 0%;
    &--thisProject
        display:block

.control
    visibility: hidden;
    width: 0%;
    height: 0;

.control--html:checked 
    ~ .editor__fieldsetWrap 
        .fieldset--html
            flex-grow: 1;
            flex-basis: 33%;
            min-height: 7em;
            max-height: 20vh;
            .field
                visibility: visible;
                width: 100%;
                height: 75%;
            .fieldset__label
                color: #333;
                font-weight: bold;
                border-color: #777;
      
.control--css:checked
    ~ .editor__fieldsetWrap
        .fieldset--css
            flex-grow: 1;
            flex-basis: 33%;
            visibility: visible;                
            min-height: 7em;
            max-height: 20vh;
            flex-grow: 1;
            .field
                visibility: visible;
                width: 100%;
                height: 75%;  
            .fieldset__label
                color: #333;
                font-weight: bold;
                border-color: #777;
                      
.control--js:checked
    ~ .editor__fieldsetWrap
        .fieldset--js
            flex-grow: 1;
            flex-basis: 33%;
            visibility: visible;
            min-height: 7em;
            max-height: 20vh;
            flex-grow: 1;
            .field
                visibility: visible;
                width: 100%;
                height: 75%;  
            .fieldset__label
                color: #333;
                font-weight: bold;
                border-color: #777;
            
.control--html:not(:checked) + .control--css:not(:checked) + .control--js:not(:checked)
    ~ .editor__fieldsetWrap
        .fieldset 
            flex-grow:1;

.mcsandy__result
    display: flex;
    flex-direction: column;
    flex-grow: 2;
    width: 100%;
    &__iframe
        width: 100%;
        outline: none;
        border: none;

.mpGlobal__footer
    &__editor
        flex-direction:row
        flex-shrink: 1
        align-self: flex-start
        flex-basis: 3em
        width: 100%
        .fieldset
            flex-grow:1

.online
    color: green;

.offline
    color: red;

