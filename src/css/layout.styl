*, :before, :after 
	box-sizing: inherit

html, body
	height: 100%
	width: 100%
	box-sizing: border-box
body
	display:flex
	flex-direction: column
	justify-content: space-around
	align-items: flex-start

.projectManager
	position: relative
	flex-shrink: 1
	max-height: 5rem;
	width: 100%
	transition: all .3s ease-in-out
	&.js-collapsed
		max-height: 0
		.projectManager__fieldsets
			max-height: 0


.projectManager__fieldsets
		display: grid
		grid-template-columns: 33% auto 33%
		max-height: 20rem
		overflow: hidden;

		.fieldset
			padding: 0 .32em

.projectManager__toggle
	position: absolute;
	top: -2.3rem;
	display: inline-block;
	padding: .25em
	border: 1px solid #e1e1e1
	margin: 0
	cursor: pointer

.projectManager__name 
	flex-grow: 1
	margin-right: -1em

.projectManager__jsLib__check,
.projectManager__jsLib__label 
	line-height: 1.2
	margin: .5em 1em

.projectManager__jsLib__label 
	display: inline-block
	width: 80%
	transition: all .3s ease-in-out

.projectManager__externalLibs
	.fieldset__wrapper
		display: flex
		flex-wrap: wrap
		align-items: center
		justify-content: space-between
		flex-shrink: 1
		height: 3em
		overflow-y: scroll

.mpGlobal
	&__header
		flex-shrink: 1
		display: flex
		width: 100%
		flex-direction: column
		justify-content: flex-start
	&__header
		align-items: stretch
		&__onlineStatus
			align-self: flex-end
		&__editor__wrapper
			flex-grow: 1;
			display: flex
			flex-direction: column
			resize: both
			overflow: auto
		&__hgroup
			font-size: 1rem
			flex-grow: 1
			align-self: flex-start
			display: flex
			width: 100%
			overflow: hidden
			flex-direction: row
			align-items: baseline
			justify-content: space-between
			&--visible
				max-height: 2rem
		.editor
			&__label
				order: 2
.editor
	flex-grow: 1
	display: flex
	flex-direction: row
	justify-content: space-between
	padding: 0
	&__toggle
		&:checked
			~ .mpGlobal__header__editor, 
			~ .projectManager__editor, 
			~ .projectManager__editor > .editor__fieldset
				flex-basis: 0
				height: 0
				overflow:hidden
	&__label
		align-self: flex-start
		flex-shrink: 0
		display: inline-block
	&__fieldset
		flex-shrink: 1
	&__fieldset
		flex-grow:1
.fieldsetGroup
	display: flex
	height: 30vh
	&__fieldset
		flex-grow: 1
		flex-basis: 10%
.fieldset
	display: flex
	flex-direction: column
	overflow-y: hidden
	overflow-x: hidden
	flex-grow: 1
	flex-shrink: 1
	flex-basis:33%
	position: relative
	&__label
		display: block
		position: absolute
		right: 0
	&__wrapper
		flex-grow: 1
		width: 100%
		display: flex
		flex-direction: row
		justify-content: flex-start
		align-items: stretch
	&__button
		flex-basis: 2.5em
	&__userOptions
		display:flex
		flex-wrap: wrap
	&__inputWrapper
		flex-grow: 1
		align-self: auto
		display: flex
		justify-content: flex-start
		.fieldset__field
			flex-grow: 1
			margin-left: 0
			margin-right: 0
		.fieldset__button
			align-self: flex-end
			margin-left: 0
	&__field
		align-self: flex-end
		flex-basis: 8rem
		width: 99%
	&--html
		order: 1
	&--css
		order: 2
	&--js
		order: 3
	&.js-shrunk
		flex-grow: 0
		flex-shrink: 3
		flex-basis: 5%
		.field, .fieldset__inputWrapper
			display:none

.fieldset__label
		display: flex
		flex-direction: column
		justify-content: center
	&.js-shrunk
		flex-grow: 1

.field
	flex-grow: 1
	&--upload
		flex-basis: 100%
		width: 95%
	&.js-shrink
		height: 0
		~ .fieldset__inputWrapper
			.fieldset__field
				visibility: visible
				height: auto
				width: 75%


.mpGlobal__result
	display:flex
	width: 100%
	flex-direction: column
	flex-grow: 2
	&__iframe
		flex-grow: 1
		width: 100%
		outline: none
		border: none


.mcsandy
	&--horizontal
		flex-direction: row
		.mpGlobal
			&__header
				width:auto
				&__hgroup
					width:0
				&__editor[class]
					flex-basis: 95vh
					height: @flex-basis
					flex-direction: column
					border-bottom: none
					.fieldset
						flex-basis: 5%
				.editor
					&__label
						border-radius: .5em .5em 0 0;
						order: -1
			&__result
				height: 100%
			&__footer
				height: 100vh
				width: auto
				max-width:17rem
				flex-direction: column
				align-self:flex-start
				&__editor
					flex-direction: column
					flex-basis: none
					height: 100%
					align-self: flex-end

					.fieldset
						font-size: .9em
						width: 100%
						&__wrapper
							flex-direction: column
						&--externalLibs
							flex-basis: 33%
							.fieldset__wrapper
								flex-direction: row
		.editor__toggle:checked ~ .projectManager__editor,
		.editor__toggle:checked ~ .mpGlobal__header__editor
			flex-grow:0
			width:0
		> .editor__fieldset
			height: initial
			width: 0



	
